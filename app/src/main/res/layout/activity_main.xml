<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" tools:layout_editor_absoluteY="73dp">

    <Button
            android:text="+"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/Piu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/Meno"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.73" style="@style/Widget.AppCompat.Button"/>
    <Button
            android:text="-"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/Meno"
            app:layout_constraintStart_toEndOf="@+id/Piu" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/Per" app:layout_constraintTop_toTopOf="@+id/Piu"/>
    <Button
            android:text="*"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/Per"
            app:layout_constraintStart_toEndOf="@+id/Meno" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/Diviso" app:layout_constraintTop_toTopOf="@+id/Meno"/>
    <Button
            android:text="/"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:id="@+id/Diviso"
            app:layout_constraintStart_toEndOf="@+id/Per" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/Per"/>
    <EditText
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number|numberDecimal"
            android:ems="10"
            android:id="@+id/Addendo0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.237"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|number|numberDecimal"
            android:ems="10"
            android:id="@+id/Addendo1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.237"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.858" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Result"
            android:layout_width="210dp"
            android:layout_height="48dp"
            android:id="@+id/ResultText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="14sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.522"
            app:layout_constraintVertical_bias="0.454" android:textAlignment="center" android:textStyle="italic"/>

</android.support.constraint.ConstraintLayout>